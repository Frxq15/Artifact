<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="styles.css">
<body class="background">
   <div id="userExists-error">
      <h3 style="text-align: center; color: red; padding-top: 100px;">An account with this username or email address could not be found.</h3>
      <h4 style="text-align: center; color: red; font-style: italic;">Did you enter your details correctly?</h4>
   </div>
   <div></div>
   <div class="element">
    <h1 style="text-align: center; color: white; padding-top: 100px;">Sign In</h1>
    <%if (messages.error) { %>
       <% messages.error %>
       <% } %>
    <hr class="black">
    <div class="card" style="height: 265px;">
    <form action="/login" method="POST">
       <div>
          <label for="name">Username</label>
          <input type="text" id="name" name="username" placeholder="Username" required>
       </div>
       <div>
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Password" required>
       </div>
       <hr class="black">
       <button class="singlebutton btn btn-primary" style="width: 200px;" type="submit">Login</button>
    </form>
    <a style="text-align: center; margin: 0;" href="/register">Sign Up</a>
 </div>
 </div>  
</body>