<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<link rel="stylesheet" href="styles.css">
<body class="background">
   <div class="element">
      <h2 style="text-align: center; color: white;">2-Factor</h2>
      <h2 style="text-align: center; color: white; padding-left: -50px;">Authentication</h2>
      <%if (messages.error) { %>
         <% messages.error %>
         <% } %>
      <hr class="black">
      <div class="card" style="height: 265px;">
      <form action="/user-confirm" method="POST">
         <div style="text-align: center; margin: 0;">
            <h4>Confirm Code</h4>
         <div>
            <label for="code">Enter your 2FA Code</label>
            <input type="code" id="code" name="code" placeholder="2FA Code" required>
         </div>
         <hr class="black">
         <button class="singlebutton btn btn-primary" style="width: 200px;" type="submit">Confirm Code</button>
      </form>
      <p style="padding-top: 10px;">We sent a code to</p>
      <p style="margin: 0;"><i class="fa fa-phone"></i> <%= email %></p>
   </div>
   </div>  
</body>